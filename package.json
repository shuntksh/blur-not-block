{
  "name": "focusflow",
  "displayName": "Focusflow",
  "version": "0.0.5",
  "description": "Your digital ally for undistracted productivity, empowering you to surf smarter, work better, and reclaim your focus.",
  "author": "shunt",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@sqlite.org/sqlite-wasm": "3.42.0-build1",
    "daisyui": "3.1.1",
    "plasmo": "0.76.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.2",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@types/chrome": "0.0.237",
    "@types/node": "20.3.1",
    "@types/react": "18.2.13",
    "@types/react-dom": "18.2.6",
    "autoprefixer": "10.4.14",
    "postcss": "^8.4.24",
    "postcss-import": "15.1.0",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "0.3.0",
    "typescript": "5.1.3"
  },
  "manifest": {
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost;object-src 'self';"
    },
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "https://*/*"
    ]
  }
}
